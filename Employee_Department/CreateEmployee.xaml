<Window x:Class="Employee_Department.CreateEmployee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Employee_Department"
        mc:Ignorable="d"
        Title="CreateEmployee" Height="200" Width="300">
    <Grid>
        <Label Content="Input new Name" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.259,0.031" Width="272"/>
        <TextBox x:Name="NewNameEmpTextBox" HorizontalAlignment="Left" Height="23" Margin="10,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="272"/>
        <Label Content="Select Department" HorizontalAlignment="Left" Margin="10,69,0,0" VerticalAlignment="Top" Width="272"/>
        <ComboBox x:Name="DepComboBox" HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top" Width="272" IsReadOnly="True" IsSynchronizedWithCurrentItem="True"/>
        <Button x:Name="ExitButton" Content="Exit" HorizontalAlignment="Left" Margin="207,127,0,0" VerticalAlignment="Top" Width="75" Click="ExitButton_Click"/>
        <Button x:Name="UploadNewEmpButton" Content="Upload new Employee" HorizontalAlignment="Left" Margin="10,127,0,0" VerticalAlignment="Top" Width="151" Click="UploadNewEmpButton_Click"/>

    </Grid>
</Window>
