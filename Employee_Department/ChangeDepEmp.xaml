<Window x:Class="Employee_Department.ChangeDepEmp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Employee_Department"
        mc:Ignorable="d"
        Title="ChangeDepEmp" Height="300" Width="300">
    <Grid>
        <Label Content="Select Employee" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="272"/>
        <ComboBox x:Name="NameEmpCoboBox" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="272" IsSynchronizedWithCurrentItem="True" IsReadOnly="True"/>
        <Label Content="Select Department" HorizontalAlignment="Left" Margin="10,68,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.502,-0.285" Width="272"/>
        <ComboBox x:Name="DepCombobox" HorizontalAlignment="Left" Margin="10,99,0,0" VerticalAlignment="Top" Width="272" IsSynchronizedWithCurrentItem="True" IsReadOnly="True"/>
        <Button x:Name="ConfirmButton" Content="Confirm" HorizontalAlignment="Left" Margin="10,148,0,0" VerticalAlignment="Top" Width="75" Click="ConfirmButton_Click"/>
        <Button x:Name="ExitButton" Content="Exit" HorizontalAlignment="Left" Margin="173,148,0,0" VerticalAlignment="Top" Width="75" Click="ExitButton_Click"/>

    </Grid>
</Window>
