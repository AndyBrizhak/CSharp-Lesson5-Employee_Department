<Window x:Class="Employee_Department.EditEmp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Employee_Department"
        mc:Ignorable="d"
        Title="EditEmp" Height="300" Width="300">
    <WrapPanel Margin="0,0,2,0">
        <Button x:Name="AddNewEmp" Content="Input new Employee" Width="260" Click="AddNewEmp_Click"/>
        <Button x:Name="ChangeNameEmp" Content="Change Name of Employee" Width="259" Click="ChangeNameEmp_Click"/>
        <Button x:Name="ChangeDepEmp" Content="Change Department of Employee" Width="257" Click="ChangeDepEmp_Click"/>
        <Button x:Name="ExitButton" Content="Exit" Width="257" Click="ExitButton_Click"/>
       
            
    </WrapPanel>
</Window>
